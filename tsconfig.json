{
    "compilerOptions": {
        "target": "es5",                          
        "module": "es6",                    
        "lib": ["es6"],                     
        "allowJs": true,
        "outDir": "dist",                          
        "rootDir": "src",
        "strict": true,         
        "noImplicitAny": true,
        "esModuleInterop": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules/**/*", "build/**/*"]
}